{
  "name": "Trip Planner Agent",
  "description": "A comprehensive trip planning agent that creates detailed travel itineraries including activities, accommodations, dining recommendations, and day-by-day plans based on user preferences.",
  "version": "1.0.0",
  "author": "AgentHub",
  "email": "team@agenthub.com",
  "tags": [
    "travel",
    "trip-planning",
    "itinerary",
    "vacation",
    "tourism",
    "accommodations",
    "dining",
    "activities",
    "travel-recommendations",
    "vacation-planning"
  ],
  "entry_point": "trip_planner_agent.py",
  "agent_type": "function",
  "pricing_model": "per_use",
  "price_per_use": 0.3,
  "requirements": [],
  "config_schema": {
    "destination": {
      "type": "string",
      "description": "The travel destination (city, country, or region)",
      "required": true
    },
    "month": {
      "type": "choice",
      "description": "Preferred month for the trip (optional - select a month to specify timing, or leave unselected for flexible dates)",
      "required": false,
      "options": [
        {
          "value": "january",
          "label": "January"
        },
        {
          "value": "february",
          "label": "February"
        },
        {
          "value": "march",
          "label": "March"
        },
        {
          "value": "april",
          "label": "April"
        },
        {
          "value": "may",
          "label": "May"
        },
        {
          "value": "june",
          "label": "June"
        },
        {
          "value": "july",
          "label": "July"
        },
        {
          "value": "august",
          "label": "August"
        },
        {
          "value": "september",
          "label": "September"
        },
        {
          "value": "october",
          "label": "October"
        },
        {
          "value": "november",
          "label": "November"
        },
        {
          "value": "december",
          "label": "December"
        }
      ]
    },
    "travel_days": {
      "type": "integer",
      "description": "Number of travel days (optional - specify how many days you want to travel, default is 7 days)",
      "required": false,
      "minimum": 1,
      "maximum": 30,
      "default": 7
    },
    "budget_level": {
      "type": "choice",
      "description": "Budget level for the trip",
      "default": "moderate",
      "options": [
        {
          "value": "budget",
          "label": "Budget"
        },
        {
          "value": "moderate",
          "label": "Moderate"
        },
        {
          "value": "luxury",
          "label": "Luxury"
        }
      ]
    },
    "trip_type": {
      "type": "choice",
      "description": "Type of trip",
      "default": "leisure",
      "options": [
        {
          "value": "leisure",
          "label": "Leisure"
        },
        {
          "value": "business",
          "label": "Business"
        },
        {
          "value": "adventure",
          "label": "Adventure"
        },
        {
          "value": "cultural",
          "label": "Cultural"
        },
        {
          "value": "romantic",
          "label": "Romantic"
        },
        {
          "value": "family",
          "label": "Family"
        },
        {
          "value": "solo",
          "label": "Solo"
        },
        {
          "value": "group",
          "label": "Group"
        }
      ]
    },
    "preferences": {
      "type": "textarea",
      "description": "User preferences and interests (e.g., art, food, nature, history) - one per line",
      "default": "",
      "multiline": true,
      "placeholder": "Enter your preferences, one per line..."
    },
    "group_size": {
      "type": "integer",
      "description": "Number of travelers",
      "minimum": 1,
      "maximum": 20,
      "default": 2
    },
    "special_requirements": {
      "type": "string",
      "description": "Any special requirements or accessibility needs",
      "default": ""
    },
    "planning_model": {
      "type": "string",
      "description": "Model for trip planning and research",
      "default": "openai:gpt-4o"
    },
    "planning_model_max_tokens": {
      "type": "integer",
      "description": "Maximum output tokens for planning model",
      "minimum": 1000,
      "maximum": 16000,
      "default": 8000
    },
    "final_report_model": {
      "type": "string",
      "description": "Model for generating final trip itinerary",
      "default": "openai:gpt-4o"
    },
    "final_report_model_max_tokens": {
      "type": "integer",
      "description": "Maximum output tokens for final report model",
      "minimum": 1000,
      "maximum": 16000,
      "default": 12000
    },
    "max_retries": {
      "type": "integer",
      "description": "Maximum number of retries for model calls",
      "minimum": 1,
      "maximum": 10,
      "default": 3
    },
    "include_transportation": {
      "type": "boolean",
      "description": "Whether to include transportation recommendations",
      "default": true
    },
    "include_weather_info": {
      "type": "boolean",
      "description": "Whether to include weather information",
      "default": true
    },
    "include_safety_tips": {
      "type": "boolean",
      "description": "Whether to include safety tips and local customs",
      "default": true
    }
  }
} 