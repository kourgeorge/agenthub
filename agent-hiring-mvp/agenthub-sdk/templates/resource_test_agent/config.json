{
  "name": "Resource Test Agent",
  "description": "A configurable agent that performs CPU, memory, and disk intensive tasks to test Docker monitoring systems. Uses only Python standard library for maximum compatibility.",
  "version": "2.0.0",
  "entry_point": "resource_test_agent.py",
  "agent_type": "function",
  "author": "AgentHub Team",
  "email": "team@agenthub.com",
  "tags": [
    "resource-testing",
    "monitoring",
    "cpu-intensive",
    "memory-intensive",
    "disk-intensive",
    "docker-testing",
    "performance-testing",
    "stress-testing",
    "standard-library",
    "configurable",
    "failure-simulation"
  ],
  "pricing_model": "free",
  "config_schema": {
    "functions": [
      {
        "name": "execute",
        "description": "Execute configurable resource-intensive tasks to test CPU, memory, and disk usage",
        "inputSchema": {
          "type": "object",
          "properties": {
            "task_type": {
              "type": "string",
              "description": "Type of resource-intensive task to perform",
              "enum": ["cpu", "memory", "disk", "all"],
              "default": "all"
            },
            "cpu_percent": {
              "type": "integer",
              "description": "Target CPU usage percentage (1-100)",
              "minimum": 1,
              "maximum": 100,
              "default": 50
            },
            "cpu_duration_seconds": {
              "type": "integer",
              "description": "Duration for CPU intensive task in seconds (1-300)",
              "minimum": 1,
              "maximum": 300,
              "default": 30
            },
            "memory_mb": {
              "type": "integer",
              "description": "Target memory usage in MB (1-1000)",
              "minimum": 1,
              "maximum": 1000,
              "default": 100
            },
            "memory_duration_seconds": {
              "type": "integer",
              "description": "Duration for memory intensive task in seconds (1-300)",
              "minimum": 1,
              "maximum": 300,
              "default": 30
            },
            "disk_mb": {
              "type": "integer",
              "description": "Target disk usage in MB (1-500)",
              "minimum": 1,
              "maximum": 500,
              "default": 50
            },
            "disk_duration_seconds": {
              "type": "integer",
              "description": "Duration for disk intensive task in seconds (1-300)",
              "minimum": 1,
              "maximum": 300,
              "default": 30
            },
            "should_succeed": {
              "type": "boolean",
              "description": "Whether the task should succeed (false to force failure)",
              "default": true
            },
            "failure_probability": {
              "type": "number",
              "description": "Probability of failure (0.0-1.0, 0.0 = never fail, 1.0 = always fail)",
              "minimum": 0.0,
              "maximum": 1.0,
              "default": 0.0
            }
          },
          "required": []
        },
        "outputSchema": {
          "type": "object",
          "properties": {
            "status": {
              "type": "string",
              "enum": ["success", "error"],
              "description": "Execution status"
            },
            "task_type": {
              "type": "string",
              "description": "Type of task that was executed"
            },
            "cpu_percent": {
              "type": "integer",
              "description": "Target CPU usage percentage"
            },
            "cpu_duration_seconds": {
              "type": "integer",
              "description": "Target CPU task duration in seconds"
            },
            "memory_mb": {
              "type": "integer",
              "description": "Target memory usage in MB"
            },
            "memory_duration_seconds": {
              "type": "integer",
              "description": "Target memory task duration in seconds"
            },
            "disk_mb": {
              "type": "integer",
              "description": "Target disk usage in MB"
            },
            "disk_duration_seconds": {
              "type": "integer",
              "description": "Target disk task duration in seconds"
            },
            "should_succeed": {
              "type": "boolean",
              "description": "Whether the task was configured to succeed"
            },
            "failure_probability": {
              "type": "number",
              "description": "Configured failure probability"
            },
            "total_execution_time": {
              "type": "number",
              "description": "Total execution time in seconds"
            },
            "task_results": {
              "type": "object",
              "description": "Results from individual tasks"
            },
            "timestamp": {
              "type": "string",
              "description": "ISO timestamp of execution"
            },
            "agent_type": {
              "type": "string",
              "description": "Type of agent"
            },
            "note": {
              "type": "string",
              "description": "Additional information about the agent"
            },
            "error_message": {
              "type": "string",
              "description": "Error message if status is error"
            },
            "error_type": {
              "type": "string",
              "description": "Type of error that occurred"
            }
          },
          "required": ["status", "task_type", "total_execution_time", "timestamp", "agent_type"]
        }
      }
    ]
  }
}
