{
  "name": "Headhunter Agent",
  "description": "A specialized agent that searches for top talent candidates on LinkedIn and the web based on job title, region, and requirements",
  "version": "1.0.0",
  "entry_point": "headhunter_agent.py",
  "author": "AgentHub Team",
  "email": "team@agenthub.com",
  "tags": [
    "recruitment",
    "hiring",
    "talent-search",
    "linkedin",
    "job-search",
    "hr",
    "recruiting",
    "candidate-sourcing",
    "talent-acquisition",
    "professional-networking"
  ],
  "agent_type": "function",
  "pricing_model": "per_use",
  "price_per_use": 2,
  "requirements": [
    "openai>=1.0.0", 
    "requests>=2.28.0", 
    "python-dotenv>=1.0.0",
    "beautifulsoup4>=4.12.0",
    "selenium>=4.15.0",
    "webdriver-manager>=4.0.0"
  ],
  "config_schema": {
    "functions": [
      {
        "name": "execute",
        "description": "Search for top talent candidates based on job requirements",
        "inputSchema": {
          "type": "object",
          "properties": {
            "job_title": {
              "type": "string",
              "description": "The job title or position to search for",
              "default": "Software Engineer"
            },
            "region": {
              "type": "string",
              "description": "Geographic region or location for the search",
              "default": "San Francisco, CA"
            },
            "description": {
              "type": "string",
              "description": "Optional detailed job description or requirements"
            },
            "search_depth": {
              "type": "integer",
              "description": "How many search variations to try (1-5)",
              "minimum": 1,
              "maximum": 5,
              "default": 3
            },
            "candidates_per_search": {
              "type": "integer",
              "description": "Number of candidates to find per search (5-20)",
              "minimum": 5,
              "maximum": 20,
              "default": 10
            },
            "include_remote": {
              "type": "boolean",
              "description": "Whether to include remote work candidates in the search",
              "default": true
            }
          },
          "required": ["job_title", "region"],
          "additionalProperties": false
        },
        "outputSchema": {
          "type": "object",
          "properties": {
            "status": {
              "type": "string",
              "description": "Execution status (success or error)",
              "enum": ["success", "error"]
            },
            "result": {
              "type": "object",
              "description": "Search results when successful",
              "properties": {
                "job_title": {
                  "type": "string",
                  "description": "The job title that was searched"
                },
                "region": {
                  "type": "string",
                  "description": "The region that was searched"
                },
                "description": {
                  "type": "string",
                  "description": "Job description used for search"
                },
                "total_candidates": {
                  "type": "integer",
                  "description": "Total number of candidates found"
                },
                "top_candidates": {
                  "type": "array",
                  "description": "List of top candidates with analysis",
                  "items": {
                    "type": "object",
                    "properties": {
                      "name": {"type": "string"},
                      "title": {"type": "string"},
                      "company": {"type": "string"},
                      "skills": {"type": "array", "items": {"type": "string"}},
                      "confidence_score": {"type": "number"},
                      "linkedin_url": {"type": "string"},
                      "analysis": {"type": "string"}
                    }
                  }
                },
                "report": {
                  "type": "string",
                  "description": "Comprehensive candidate analysis report"
                },
                "all_candidates": {
                  "type": "array",
                  "description": "List of all candidates found",
                  "items": {
                    "type": "object",
                    "properties": {
                      "name": {"type": "string"},
                      "title": {"type": "string"},
                      "company": {"type": "string"},
                      "skills": {"type": "array", "items": {"type": "string"}},
                      "confidence_score": {"type": "number"},
                      "linkedin_url": {"type": "string"},
                      "source": {"type": "string"}
                    }
                  }
                },
                "search_queries": {
                  "type": "array",
                  "description": "List of search queries used",
                  "items": {"type": "string"}
                },
                "timestamp": {
                  "type": "string",
                  "description": "ISO timestamp of when the search was completed"
                }
              }
            },
            "error": {
              "type": "string",
              "description": "Error message when status is error"
            }
          },
          "required": ["status"],
          "additionalProperties": false
        }
      }
    ]
  }
} 