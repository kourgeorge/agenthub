{
  "name": "acp_agent_template",
  "description": "A template for creating ACP (Agent Communication Protocol) server agents with standard endpoints, session management, and extensible architecture.",
  "version": "1.0.0",
  "author": "AgentHub Team",
  "email": "team@agenthub.com",
  "entry_point": "acp_agent_template.py",
  "requirements": [
    "aiohttp>=3.8.0",
    "aiohttp-cors>=0.7.0"
  ],
  "config_schema": {
    "type": "object",
    "properties": {
      "debug": {
        "type": "boolean",
        "default": false,
        "description": "Enable debug mode with detailed error messages"
      },
      "max_message_length": {
        "type": "integer",
        "default": 10000,
        "minimum": 1,
        "maximum": 100000,
        "description": "Maximum length of chat messages in characters"
      },
      "session_timeout": {
        "type": "integer",
        "default": 3600,
        "minimum": 60,
        "maximum": 86400,
        "description": "Session timeout in seconds"
      },
      "cors_origins": {
        "type": "string",
        "default": "*",
        "description": "Comma-separated list of allowed CORS origins"
      }
    }
  },
  "tags": [
    "template",
    "acp",
    "server",
    "chat",
    "http",
    "rest-api"
  ],
  "category": "template",
  "pricing_model": "free",
  "price_per_use": null,
  "monthly_price": null,
  "max_execution_time": 0,
  "memory_limit": "256MB",
  "agent_type": "acp_server",
  "acp_manifest": {
    "acp_version": "1.0.0",
    "endpoints": {
      "health": "/health",
      "info": "/info",
      "chat": "/chat",
      "message": "/message",
      "sessions": "/sessions",
      "status": "/"
    },
    "capabilities": [
      "text_processing",
      "session_management",
      "persistent_service",
      "health_monitoring",
      "message_tracking",
      "cors_support",
      "error_handling"
    ],
    "deployment": {
      "port": 8001,
      "health_check_path": "/health",
      "startup_timeout": 30,
      "shutdown_timeout": 10,
      "environment_variables": {
        "PORT": "Server port (default: 8001)",
        "HOST": "Server host (default: 0.0.0.0)",
        "DEBUG": "Enable debug mode (default: false)",
        "CORS_ORIGINS": "Comma-separated allowed origins (default: *)",
        "MAX_MESSAGE_LENGTH": "Maximum message length (default: 10000)",
        "SESSION_TIMEOUT": "Session timeout in seconds (default: 3600)",
        "AGENT_NAME": "Custom agent name (default: ACP Agent Template)",
        "AGENT_VERSION": "Custom agent version (default: 1.0.0)",
        "AGENT_DESCRIPTION": "Custom agent description"
      }
    },
    "features": {
      "session_persistence": true,
      "message_history": true,
      "concurrent_sessions": true,
      "session_cleanup": true,
      "request_logging": true,
      "error_middleware": true,
      "cors_middleware": true
    }
  }
} 